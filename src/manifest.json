{
  "manifest_version": 3,
  "name": "better-ccc",
  "version": "1.1.0",
  "content_scripts": [
    {
      "matches": ["*://www.chess.com/*computer-chess-championship*"],
      "css": ["styles.css"],
      "js": ["script.js", "highlight.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "icons/icon_128.png",
    "48": "icons/icon_48.png",
    "32": "icons/icon_32.png"
  },
  "permissions": ["scripting", "storage", "tabs"]
}
